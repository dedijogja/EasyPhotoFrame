<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95A5A6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/iklanSaveActivity"
            android:layout_toLeftOf="@+id/navigasi">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/pembungkusSaveUtama"
                android:background="#f4f4f4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imageSaveUtama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigasi"
            android:orientation="vertical"
            android:background="#506376"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/iklanSaveActivity"
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:background="#34495E"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textColor="#f4f4f4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Save Options"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleSaveImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/iklanSaveActivity"
            android:background="#506376"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" />


        <FrameLayout
            android:background="#80000000"
            android:visibility="gone"
            android:id="@+id/frameSaveDialog"
            android:layout_above="@+id/iklanSaveActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>



</RelativeLayout>
